@using Microsoft.AspNetCore.Identity
@model TeaShopMVC.ViewModel.ChangeRoleViewModel
@{
    ViewData["Title"] = "EditUserRole";
}

<h2>Роли для пользователя @Model.UserEmail</h2>
<form asp-action="EditUserRole" asp-controller="Admin" method="post">
    <input type="hidden" name="id" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            if (Model.UserRoles.Contains(role.Name))
            {
                <input type="checkbox" name="roles" value="@role.Name" checked />@role.Name
            }
            else
            {
                <input type="checkbox" name="roles" value="@role.Name" />@role.Name
            }
            <br />

        }
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-info" />
    </div>
</form>